{
  "name": "clean-arch-api-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/yazaldefilimonepinto/clean-arch-api-starter",
  "author": {
    "name": "Yazalde Filimone",
    "email": "yazaldefilimon@gmail.com",
    "url": "https://yazaldefilimone.vercel.app"
  },
  "license": "MIT",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "prisma"
  ],
  "scripts": {
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js)\" --write",
    "postinstall": "husky install",
    "start": "node -r dotenv/config dist/main/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config  src/main/server.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "prepare": "husky install",
    "lint": "tslint -p tsconfig.json",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.1.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.8.3",
    "@vitest/coverage-c8": "^0.24.3",
    "husky": "^7.0.2",
    "jest-mock-extended": "^2.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.7.1",
    "prisma": "^4.4.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "*",
    "vitest": "^0.24.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "joi": "^17.6.2",
    "module-alias": "^2.2.2",
    "vite-tsconfig-paths": "^3.5.1"
  }
}
